<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>SHINNOSUKE PRACTICE</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/all.css">

  </head>

  <body>
    <header>
      <a href="/" class="header-logo">SHINNOSUKE PRACTICE</a>
    </header>

    <div class="container">

      <div class="container-header">
        <h1>ひとことメモ</h1>
        <a href="/new" class="new-button">+ 新規メモ</a>
      </div>

      <div class="table">

        <div class="table-top">
          <div class="tag-icon">
            <a href="/index"><i class="fas fa-undo-alt"></i></a>
          </div>
          <span>メモ</span>
        </div>

        <ul class="table-body">
          <% memos.forEach((memo) => { %>
            <li>
              <div class="memo-data">
                <span class="favo-column">
                  <% if (memo.favorite == 1) { %>
                      <i class="far fa-flag"></i>
                  <% } else if (memo.favorite == 2) { %>
                      <i class="far fa-star"></i>
                  <% } %>
                </span>
                <span class="memo-column"><%= memo.memo %></span>
              </div>
            </li>
          <% }); %>
        </ul>

      </div>


    </div>

  </body>

</html>
